@model List<HouseSpy.Models.Products>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if (Model.Count > 0)
{
    <table class="table table-striped" style="width:100%">
        <tr class="table-info">
            <th style="text-align:center; width:20%"></th>
            <th style="text-align:center">
                <label asp-for="@Model.FirstOrDefault().Name"></label>
            </th>
            <th style="text-align:center">
                <label asp-for="@Model.FirstOrDefault().Price"></label>
            </th>
            <th style="text-align:center">
                <label asp-for="@Model.FirstOrDefault().ShadeColor"></label>
            </th>
            <th style="text-align:center">
                <label asp-for="@Model.FirstOrDefault().ProductTypes.Name"></label>
            </th>
            @*<th></th>*@
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.Image" style="width:100%" />
                    </a>
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(m => item.Name)
                    @*<label>@item.Name</label>*@
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(m => item.ShadeColor)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(m => item.ProductTypes.Name)
                </td>
                @*<td>
                    <button type="submit" class="btn btn-danger" asp-action="remove" asp-route-id="@item.Id">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>*@
            </tr>
        }
    </table>
}
else
{
    <h2>No Item was selected</h2>
}
