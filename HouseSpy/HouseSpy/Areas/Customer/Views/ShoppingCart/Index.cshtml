@model HouseSpy.Models.ViewModel.ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
}



<form method="post">
    <h2 class="text-info">Your Shopping Cart</h2>
    <br />
    @if (Model.Products.Count > 0)
    {
        <div class="container border border-secondary rounded" style="padding:15px">
            <div class="row">
                <div class="col-md-8" style="border-right: 1px solid #bbb9b9">
                    <table class="table table-striped" style="width:100%">
                        <tr class="table-info">
                            <th style="text-align:center; width:20%"></th>
                            <th style="text-align:center">
                                <label asp-for="@Model.Products.FirstOrDefault().Name"></label>
                            </th>
                            <th style="text-align:center">
                                <label asp-for="@Model.Products.FirstOrDefault().Price"></label>
                            </th>
                            <th style="text-align:center">
                                <label asp-for="@Model.Products.FirstOrDefault().ShadeColor"></label>
                            </th>
                            <th style="text-align:center">
                                <label asp-for="@Model.Products.FirstOrDefault().ProductTypes.Name"></label>
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>
                                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                                        <img src="@item.Image" style="width:100%" />
                                    </a>
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(m => item.Name)
                                    @*<label>@item.Name</label>*@
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(m => item.Price)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(m => item.ShadeColor)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(m => item.ProductTypes.Name)
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-danger" asp-action="remove" asp-route-id="@item.Id">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </table>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>Name: </label>
                        <input asp-for="@Model.Appointments.CustomerName" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Phone: </label>
                        <input asp-for="@Model.Appointments.CustomerPhoneNumber" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Email: </label>
                        <input asp-for="@Model.Appointments.CustomerEmail" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Appointment Date: </label>
                        <input asp-for="@Model.Appointments.AppointmentDate" class="form-control" type="text" id="datepicker" />
                    </div>

                    <div class="form-group">
                        <label>Appointment Time: </label>
                        <input asp-for="@Model.Appointments.AppointmentTime" class="form-control" type="text" id="timepicker" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success form-control btn-sm" id="btnPlaceOrder">Shedule Appointment</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <h2>No item was selected</h2>
    }
</form>
@section Scripts{
    <script>
        $(function () {
            $("#datepicker").datepicker({
                minDate: +1, macDate: "+3M"
            });
            $('#timepicker').timepicker({});
        });
    </script>
}